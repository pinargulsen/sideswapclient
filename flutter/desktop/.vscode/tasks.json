{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Sideswap: README task",
            "type": "shell",
            "command": "echo To deploy please run vscode then SHIFT + P - Tasks: Run Task and choose task - Sideswap: deploy",
            "runOptions": {
                "runOn": "folderOpen"
            },
        },
        {
            "label": "Sideswap: deploy",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Sideswap: generate app icon",
                "Sideswap: flutter pub run build_runner build",
            ],
        },
        {
            "type": "flutter",
            "command": "flutter",
            "args": [
                "pub",
                "get"
            ],
            "problemMatcher": [],
            "label": "Sideswap: flutter pub get",
            "dependsOrder": "sequence",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Sideswap: generate app icon",
            "type": "flutter",
            "command": "flutter",
            "args": [
                "pub",
                "run",
                "icons_launcher:create",
                "--path",
                "icon_launcher.yaml"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Sideswap: flutter pub get",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "flutter",
            "command": "flutter",
            "args": [
                "pub",
                "run",
                "build_runner",
                "build",
                "--delete-conflicting-outputs"
            ],
            "problemMatcher": [
                "$dart-build_runner"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "Sideswap: flutter pub run build_runner build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Sideswap: flutter pub get"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
    ]
}

